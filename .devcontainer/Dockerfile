with Reserved Font Name _\<Reserved Font Name\>_.

Copyright (c) _\<dates\>_, _\<additional Copyright Holder\> (\<URL|email\>)_,  
with Reserved Font Name _\<additional Reserved Font Name\>_.

Copyright (c) _\<dates\>_, _\<additional Copyright Holder\> (\<URL|email\>)_.  
